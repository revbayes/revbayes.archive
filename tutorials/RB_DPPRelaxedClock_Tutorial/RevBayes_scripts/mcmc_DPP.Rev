############################################################################################
#   File: timetree tutorial MCMC setup file using the DPP model and fixed tree
############################################################################################

### Load the sequence alignment
D <- readDiscreteCharacterData(file="data/bears_irbp.nex")

### get helpful variables from the data
n_sites <- D.nchar()

### initialize an iterator for the moves vector
mi = 1

### set up the birth-death model from file
source("RevBayes_scripts/m_BDP_bears.Rev")

### load the model from file 
source("RevBayes_scripts/m_DPP_bears.Rev")

### workspace model wrapper ###
mymodel = model(er)

mymodel.graph("m_DPP_modelgraph.dot", verbose=false)

### set up the monitors that will output parameter values to file and screen 
monitors[1] = mnFile(filename="output/DPP_bears_mcmc.log", printgen=10,
							diversification, turnover, birth_rate, death_rate, 
							root_time, tmrca_Ursidae, tmrca_UrsidaePinn,
							er, sf,
							mean_rt, n_cats, branch_rates, concentration, base_rate)
monitors[2] = mnFile(filename="output/DPP_bears_mcmc.trees", printgen=10, timetree)
monitors[3] = mnScreen(printgen=10, mean_rt, n_cats, concentration, root_time)

### workspace mcmc ###
mymcmc = mcmc(mymodel, monitors, moves)

### pre-burnin to tune the proposals ###
mymcmc.burnin(generations=1000,tuningInterval=100)

### run the MCMC ###
mymcmc.run(generations=5000)

### display proposal acceptance rates and tuning ###
mymcmc.operatorSummary()

### summarize the trees ###
tt = readTreeTrace("output/DPP_bears_mcmc.trees", "clock")
tt.summarize()

### write MAP tree to file
mapTree(tt, "output/DPP_bears_mcmc_MAP.tre")

## quit ##
q()
